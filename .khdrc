# enable kwm compatibility mode
khd kwm on

# set border color for different modes
khd mode default color 0xddd5c4a1
khd mode kwm color 0xddbdd322

# toggle between modes
alt - tab       : khd -e "mode activate kwm"
kwm + alt - tab : khd -e "mode activate default"

# kwm
kwm - up    : kwmc window -f north
kwm - right : kwmc window -f east
kwm - down  : kwmc window -f south
kwm - left  : kwmc window -f west

kwm + alt - up    : kwmc window -s north
kwm + alt - right : kwmc window -s east
kwm + alt - down  : kwmc window -s south
kwm + alt - left  : kwmc window -s west

kwm + ctrl - up    : kwmc window -c expand 0.05 north
kwm + ctrl - right : kwmc window -c expand 0.05 east
kwm + ctrl - down  : kwmc window -c expand 0.05 south
kwm + ctrl - left  : kwmc window -c expand 0.05 west

kwm + ctrl + shift - up    : kwmc window -c reduce 0.05 north
kwm + ctrl + shift - right : kwmc window -c reduce 0.05 east
kwm + ctrl + shift - down  : kwmc window -c reduce 0.05 south
kwm + ctrl + shift - left  : kwmc window -c reduce 0.05 west

kwm - space : kwmc window -mk focused
kwm - t     : kwmc window -t focused
kwm - r     : kwmc tree rotate 90

kwm + alt - 1 : kwmc space -t bsp
kwm + alt - 2 : kwmc space -t monocle
kwm + alt - 3 : kwmc space -t float

kwm - 1 : kwmc space -fExperimental 1
kwm - 2 : kwmc space -fExperimental 2
kwm - 3 : kwmc space -fExperimental 3
kwm - 4 : kwmc space -fExperimental 4
kwm - 5 : kwmc space -fExperimental 5
kwm - 6 : kwmc space -fExperimental 6

kwm + shift - 1 : kwmc window -m space 1
kwm + shift - 2 : kwmc window -m space 2
kwm + shift - 3 : kwmc window -m space 3
kwm + shift - 4 : kwmc window -m space 4
kwm + shift - 5 : kwmc window -m space 5
kwm + shift - 6 : kwmc window -m space 6